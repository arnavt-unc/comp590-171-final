{
  "manifest_version": 3,
  "name": "Session Cookie Manager",
  "version": "1.0",
  "description": "Manage and store session cookies securely across different websites, and inject them to maintain login sessions.",
  "permissions": ["storage", "tabs", "webNavigation", "cookies", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentscript.js"]
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
