{
    "manifest_version": 3,
    "name": "Privacy Extension",
    "version": "1.0",
    "description": "Privacy Enhancing Browser Extension",
    "permissions": ["declarativeNetRequest", "storage", "tabs", "webNavigation", "cookies", "activeTab", "scripting", "declarativeNetRequestFeedback", "webRequest", "notifications", "identity"],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "Adblock/rules.json"
            }
        ]
    },
    "oauth2": {
        "client_id": "934776093753-pr8o0ugnsnep8gg2vf2lqs96i8bedp6a.apps.googleusercontent.com",
        "scopes": [
            "openid"
        ]
    },
    "background": {
        "service_worker": "background.js"
    },
    "incognito": "spanning",
    "action": {
        "default_popup": "Cookie-saver/popup.html"
    },
    
    "icons": {
        "16": "lock_16x16.png"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["Cookie-saver/contentscript.js"]
        }
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
    ]
}